def hhmmss2deg(coord):
    hh,mm,ss = coord.replace(' ',':').split(':')
    hh = float(hh)
    mm = float(mm)
    ss = float(ss)
    H = hh+mm/60.+ss/3600.
    deg = H*360./24.
    return deg
    


def degmmss2deg(coord):
    deg,mm,ss = coord.replace(' ',':').split(':')
    deg = float(deg)
    mm = float(mm)
    ss = float(ss)
    if deg>=0.:
        Deg = deg+mm/60.+ss/3600.
    else:
        Deg = deg-mm/60.-ss/3600.
    return Deg
    





